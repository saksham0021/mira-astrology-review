# Environment Variables for Production Deployment
# Copy this file to .env and fill in your actual values

# Flask Configuration
SECRET_KEY=your-secret-key-here
FLASK_ENV=production

# Google Sheets Integration
GOOGLE_SHEETS_URL=https://docs.google.com/spreadsheets/d/1fd3YNixXYHcvyDgq2TcOHG6PGlzryt5T4nT2ObXUScM/edit?usp=sharing
GOOGLE_CREDENTIALS_FILE=credentials.json/credentials.json

# Database (for production, you might want to use a cloud database)
DATABASE_URL=sqlite:///mira_analysis.db

# Security Settings
SESSION_COOKIE_SECURE=true
PREFERRED_URL_SCHEME=https
